@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@layout BaseLayout
@attribute [AllowAnonymous]

<MudGrid Justify="Justify.Center" Class="loading-screen">
	<MudItem xs="12" md="6" lg="4" Class="align-text-center">
		<MudPaper Class="loading-container" Elevation="3">
			@Body
		</MudPaper>
	</MudItem>
</MudGrid>

<style>
	.loading-screen {
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.loading-container {
		padding: 20px;
		text-align: center;
	}
</style>
