@using Microsoft.AspNetCore.Authorization
@inherits LayoutComponentBase
@layout BaseLayout
@attribute [AllowAnonymous]

<MudGrid Justify="Justify.Center" Class="loading-screen">
	<MudItem xs="12" md="6" lg="4" Class="align-text-center">
		<MudPaper Class="loading-container" Elevation="3">
			<MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" Class="loading-spinner" />
			<MudText Typo="Typo.h6" Color="Color.Primary" Class="loading-text">Proszę czekać, ładowanie...</MudText>
			@Body
		</MudPaper>
	</MudItem>
</MudGrid>

<style>
	.loading-screen {
		height: 100vh;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.loading-container {
		padding: 20px;
		text-align: center;
	}

	.loading-spinner {
		margin: 20px 0;
	}

	.loading-text {
		font-weight: 600;
	}
</style>
