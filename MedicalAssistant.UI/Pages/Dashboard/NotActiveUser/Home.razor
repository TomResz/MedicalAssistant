@layout LoginRegisterLayout
@page "/reactivate"
@using Variant = MudBlazor.Variant
<MudPaper Class="pa-4 ma-2 d-flex flex-column justify-center align-center">
    <MudIcon Icon="@Icons.Material.Filled.Person" Style="width: 128px; height: 128px;"></MudIcon>
    <MudText Typo="Typo.h6" Align="Align.Center">@Translations.AccountIsNotActive</MudText>
</MudPaper>
<div class="d-flex flex-column flex-md-row pa-4">
    <MudButton StartIcon="@Icons.Material.Filled.VerifiedUser"  Class="align-self-stretch flex-1 ma-2" Color="Color.Success" Size="Size.Large"
               Variant="Variant.Filled" OnClick="@Reactivate">
        @Translations.ReactivateAccount
    </MudButton>
    <MudButton StartIcon="@Icons.Material.Filled.Cancel" Class="align-self-stretch flex-1 ma-2" Color="Color.Error" Size="Size.Large"
               Variant="Variant.Filled" OnClick="@BackToLoginScreen">
        @Translations.BackToLoginScreen
    </MudButton>
</div>
