@using MedicalAssistant.UI.Components.AppBar

<MudDialog TitleClass="text-center">
	<DialogContent>
		<MudGrid Style="overflow-x: hidden;">

			<MudItem xs="12">
				<MudPaper Class="pa-4" Elevation="3">
					<LanguageSwitchBtn Class="@LanguageSwitchClass" OnLanguageChanged="@LanguageChanged" />
					<MudText Inline="true" Typo="Typo.subtitle1">@Translations.AppLanguage</MudText>
				</MudPaper>
			</MudItem>
			<MudItem xs="12">
				<MudPaper Class="pa-4" Elevation="3">
					<LanguageSwitchBtn Class="@LanguageSwitchClass" OnLanguageChanged="@NotificationLanguageChanged"
									   LoadLanguageFromStorage="false" InitiaLanguage="@NotificationLanguage" />
					<MudText Inline="true" Class="pt-2" Typo="Typo.subtitle1">@Translations.NotificationLanguage</MudText>
				</MudPaper>
			</MudItem>
			<MudItem xs="12">
				<MudPaper Class="pa-4 mb-2" Elevation="3">
					<MudSwitch @bind-Value="@_viewModel.NotificationsEnabled" Label="@Translations.Notifications" />
					<MudSwitch @bind-Value="@_viewModel.VisitNotificationEnabled" Label="@Translations.VisitNotifications" />
					<MudSwitch @bind-Value="@_viewModel.EmailNotificationEnabled" Label="@Translations.EmailNotifications" />
				</MudPaper>
			</MudItem>

		</MudGrid>
	</DialogContent>
	<DialogActions>
		<MudGrid Class="px-3">
			<MudItem xs="12" sm="6">
				<MudButton OnClick="@(async () => await SaveChanges())" Disabled="@_loading"
						   Color="Color.Primary" Variant="MudBlazor.Variant.Filled" FullWidth="true">
					@Translations.SaveSettings
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6">
				<MudButton OnClick="@Cancel" Color="Color.Secondary" Variant="MudBlazor.Variant.Filled" FullWidth="true">
					@Translations.Cancel
				</MudButton>
			</MudItem>
		</MudGrid>
	</DialogActions>
</MudDialog>