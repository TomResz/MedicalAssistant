<MudPaper Elevation="4" Class="pa-4 d-flex flex-column align-stretch " Style="min-height: calc(100vh - 104px);">

	<MudGrid Class="flex-grow-1">
		<MudItem xs="12">
			<MudPaper Class="pa-4">
				<MudText Typo="Typo.h6" GutterBottom="true" Align="Align.Center">
					@Translations.Medication:
				</MudText>
			</MudPaper>
		</MudItem>

		<MudItem xs="12" sm="6">
			<MudPaper Class="pa-4">
				<MudIcon Icon="@Icons.Material.Filled.LocalHospital" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
				<MudText Typo="Typo.subtitle1" Inline="true">@Translations.MedicationName:</MudText>
				<MudText Typo="Typo.body1" Inline="true">@Medication.Name</MudText>
			</MudPaper>
		</MudItem>

		<MudItem xs="12" sm="6">
			<MudPaper Class="pa-4">
				<MudIcon Icon="@Icons.Material.Filled.Numbers" Color="Color.Primary" Size="Size.Large" Class="mr-1" />
				<MudText Typo="Typo.subtitle1" Inline="true">@Translations.Quantity:</MudText>
				<MudText Typo="Typo.body1" Inline="true">@Medication.Quantity</MudText>
			</MudPaper>
		</MudItem>

		<MudItem xs="12">
			<MudPaper Class="pa-4">
				<MudIcon Icon="@Icons.Material.Filled.DateRange" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
				<MudText Typo="Typo.subtitle1" Inline="true">@Translations.Date:</MudText>
				<MudText Typo="Typo.body1" Inline="true">
					@("\t")@Medication.StartDate.ToString("dd.MM.yyyy") - @Medication.EndDate.ToString("dd.MM.yyyy")
				</MudText>
			</MudPaper>
		</MudItem>

		<MudItem xs="12">
			<MudPaper Class="pa-4">
				<MudIcon Icon="@Icons.Material.Filled.ViewDay" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
				<MudText Typo="Typo.subtitle1" Inline="true">@Translations.TimesOfDay:</MudText>
				<MudText Typo="Typo.body1" Inline="true">@string.Join(", ", Medication.TimeOfDay)</MudText>
			</MudPaper>
		</MudItem>

		<MudItem xs="12">
			<MudPaper Class="pa-4">
				<MudIcon Icon="@Icons.Material.Filled.EventNote" Color="Color.Primary" Size="Size.Large" Class="mr-1" />
				<MudText Typo="Typo.subtitle1" Inline="true">@Translations.Note:</MudText>
				<MudText Typo="Typo.body1" Inline="true">@Medication.ExtraNote</MudText>
			</MudPaper>
		</MudItem>
	</MudGrid>

	@if (Medication.Visit is not null)
	{
		<MudPaper Class="flex-grow-1 d-flex flex-column align-stretch pa-4">
			<MudGrid Class="flex-grow-1">
				<MudItem xs="12" sm="6">
					<MudPaper Class="pa-4">
						<MudIcon Icon="@Icons.Material.Filled.Class" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
						<MudText Typo="Typo.button" HtmlTag="h3" Inline="true">@Translations.VisitType:</MudText>
						<MudText Typo="Typo.body1" Inline="true">@Medication.Visit.VisitType</MudText>
					</MudPaper>
				</MudItem>
				<MudItem xs="12" sm="6">
					<MudPaper Class="pa-4">
						<MudIcon Icon="@Icons.Material.Filled.Person" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
						<MudText Typo="Typo.button" HtmlTag="h3" Inline="true">@Translations.DoctorName:</MudText>
						<MudText Typo="Typo.body1" Inline="true">@Medication.Visit.DoctorName</MudText>
					</MudPaper>
				</MudItem>
				<MudItem xs="12">
					<MudPaper Class="pa-4">
						<MudIcon Icon="@Icons.Material.Filled.DateRange" Size="Size.Large" Color="Color.Primary" Class="mr-1" />
						<MudText Typo="Typo.button" HtmlTag="h3" Inline="true">@Translations.Date:</MudText>
						<MudText Typo="Typo.body1" Inline="true">@Medication.Visit.Date.ToString("f")</MudText>
					</MudPaper>
				</MudItem>
			</MudGrid>
		</MudPaper>
	}
	<MudGrid Class="align-items-end flex-grow-1 px-2">

		<MudItem xs="12" sm="4" Class="d-flex flex-column">
			<MudButton Variant="@MudBlazor.Variant.Filled" Color="@MudBlazor.Color.Primary"
					   StartIcon="@Icons.Material.Filled.Edit" OnClick="@Edit">
				@Translations.Edit
			</MudButton>
		</MudItem>

		<MudItem xs="12" sm="4" Class="d-flex flex-column justify-end">
			<MudButton Variant="@MudBlazor.Variant.Filled" Color="MudBlazor.Color.Error"
					   StartIcon="@Icons.Material.Filled.Delete" OnClick="@(async () => await Delete())">
				@Translations.Delete
			</MudButton>
		</MudItem>

		<MudItem xs="12" sm="4" Class="d-flex flex-column justify-end">
			<MudButton Variant="@MudBlazor.Variant.Filled" Color="MudBlazor.Color.Info"
					   StartIcon="@Icons.Material.Filled.ArrowBack" OnClick="@ReturnToScheduler">
				@Translations.Back
			</MudButton>
		</MudItem>

	</MudGrid>

</MudPaper>