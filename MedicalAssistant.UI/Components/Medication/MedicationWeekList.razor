@using MedicalAssistant.UI.Models.Medication
@using MedicalAssistant.UI.Models.Visits
<MudGrid>
	<MudItem xs="12">
		<MudText Typo="Typo.h4" Class="text-center">@ListName.ToUpper()</MudText>
	</MudItem>
</MudGrid>
@foreach (var day in _days)
{	
	@if (GroupedMedications[day].Any())
	{
		<MudPaper Elevation="4" Class="pa-4 my-2 mx-2">
			<MudGrid Justify="Justify.Center">
				<MudItem xs="12">
					<MudText Typo="Typo.h6" Align="Align.Center"> @DayOfWeekToString(day)</MudText>
				</MudItem>

				@foreach (MedicationDto medication in GroupedMedications[day].OrderBy(x => x.Name))
				{
					<MudItem xs="12">
						<MedicationItem Medication="medication"/>
					</MudItem>
				}
			</MudGrid>
		</MudPaper>
	}
}
