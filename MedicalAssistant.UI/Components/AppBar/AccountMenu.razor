@using MedicalAssistant.UI.Shared.Services.Abstraction
@using MedicalAssistant.UI.Shared.Services.Auth
@using MedicalAssistant.UI.Shared.Services.User
@inject IUserDataService Service

<MudMenu AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter">
	<ActivatorContent>
		<MudIconButton Icon="@Icons.Material.Filled.Person" Color="Color.Inherit"></MudIconButton>
	</ActivatorContent>
	<ChildContent>
		<LogoutButton />
	</ChildContent>
</MudMenu>

@code {

	private string? _fullName = "Account";

	protected override async Task OnInitializedAsync()
	{
		_fullName = await Service.GetUsername() ?? "Account";
	}
}
