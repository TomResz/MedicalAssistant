@using MedicalAssistant.UI.Components.User

@inject IDialogService DialogService

<AuthorizeView Policy="HasInternalAuthProvider">
    <Authorized>
        <MudMenuItem OnClick="@ShowDialog">
            @Translations.ChangePassword
        </MudMenuItem>
    </Authorized>
</AuthorizeView>


@code {

    private readonly MudBlazor.DialogOptions _options = new()
    {
        CloseOnEscapeKey = true,
        FullWidth = true
    };

    private void ShowDialog()
    {
        DialogService.Show<ChangePasswordDialog>(Translations.ChangePassword, _options);
    }

}