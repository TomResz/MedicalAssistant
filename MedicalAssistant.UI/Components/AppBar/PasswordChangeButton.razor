@using MedicalAssistant.UI.Components.User

@inject IDialogService DialogService

<AuthorizeView Policy="HasInternalAuthProvider">
	<Authorized>
		<MudMenuItem OnClick="@ShowDialog">
			@Translations.ChangePassword
		</MudMenuItem>
	</Authorized>
</AuthorizeView>


@code {
	private readonly MudBlazor.DialogOptions options = new()
		{
			CloseOnEscapeKey = true,
			FullWidth = true
		};
	public void ShowDialog()
	{
		DialogService.Show<ChangePasswordDialog>(Translations.ChangePassword, options);
	}
}