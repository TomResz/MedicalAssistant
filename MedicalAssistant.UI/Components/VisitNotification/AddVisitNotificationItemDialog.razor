<MudDialog TitleClass="text-center">
	<DialogContent>
		<MudForm Model="_model" ValidationDelay="60" Validation="@(_validator.ValidateValue)" @ref="_form">
			<MudGrid>
				<MudItem xs="12">
					<MudDatePicker PickerVariant="PickerVariant.Dialog" Label="@Translations.Date" Editable="false"
								   @bind-Date="_model.Date" Mask="@(new DateMask("dd/MM/yyyy"))"
								   DateFormat="dd/MM/yyyy" Placeholder="dd/MM/yyyy" For="@(() => _model.Date)" />
				</MudItem>
				<MudItem xs="12">
					<MudTimePicker PickerVariant="PickerVariant.Dialog" Label="@Translations.Time" @bind-Time="_model.Time"
								   For="@(() => _model.Time)" />
				</MudItem>
			</MudGrid>
		</MudForm>
	</DialogContent>
	<DialogActions>
		<MudGrid Class="px-3">
			<MudItem xs="12" sm="6">
				<MudButton OnClick="@(async () => await BtnPressed())" Variant="MudBlazor.Variant.Filled" FullWidth="true"
						   Color="Color.Primary" Disabled="@_btnPressed">
					@Translations.Add
				</MudButton>
			</MudItem>
			<MudItem xs="12" sm="6">
				<MudButton OnClick="Cancel" Variant="MudBlazor.Variant.Filled" FullWidth="true">
					@Translations.Cancel
				</MudButton>
			</MudItem>
		</MudGrid>
	</DialogActions>
</MudDialog>

<style>
	.mud-dialog {
		height: auto !important;
		max-height: 90vh;
		overflow-y: visible;
	}

	.mud-dialog-content {
		height: auto !important;
		max-height: 100%;
		overflow: visible;
	}

</style>