@using MedicalAssistant.UI.Models.Notifications

<MudPaper Elevation="4" Class="pa-4 list-grid">
	<MudGrid Class="relative">
		<MudItem xs="12">
			<MudText Typo="Typo.h6" Align="Align.Center">
				@Translations.Notifications
			</MudText>
		</MudItem>
		@if (!_loading)
		{
			@foreach (var notification in _notificationModels)
			{
				<MudItem xs="12">
					<VisitNotificationItem VisitNotification="@notification"
										   OnNotificationDelete="@HandleDelete"
										   OnNotificationEdit="@HandleEdit"
										   Class="d-flex align-start pa-4"/>
				</MudItem>
			}
		}
		<MudItem xs="12" Class="fab-container">
			<MudTooltip Text="@Translations.AddNotification">
				<MudFab StartIcon="@Icons.Material.Filled.AddAlarm"
						Color="Color.Primary" OnClick="Add" />
			</MudTooltip>
		</MudItem>
	</MudGrid>
</MudPaper>

<style>
	.list-grid {
		height: calc(100vh - 104px);
		overflow-y: auto;
	}

	.relative {
		position: relative;
	}

	.fab-container {
		position: sticky;
		bottom: 16px;
		display: flex;
		justify-content: flex-end;
		margin-bottom: 16px;
	}
</style>