{
  "AllowedHosts": "*",
  "postgres": {
    "connectionString": "Host=localhost; Database=MedicalAssistDb; Username=postgres; Password=root"
  },
  "Swagger": {
    "Username": "admin",
    "Password": "admin"
  },
  "urls": {
    "VerificationCodeRoute": "http://localhost:7071/api/user/verify?code",
    "RegeneratedVerificationCodeRoute": "http://localhost:7071/api/user/regenerate?code",
    "PasswordChange": "http://localhost:7071/api/user/passw?code"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "../logs/log-.txt",
          "rollingInterval": "Day",
          "rollOnFileSizeLimit": true,
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  }
}
